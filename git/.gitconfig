[core]
  excludesfile = ~/.gitignore_global
  editor = vim

[diff]
  tool = vimdiff

[merge]
  tool = vimdiff
  conflictstyle = diff3

[mergetool]
  keepBackup = true
  prompt = false

[commit]
  gpgsign = true

[gpg]
  program = /usr/local/bin/gpg

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
