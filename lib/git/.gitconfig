[http]
  sslVerify = true

[user]
  name = Juan Villela
  email = fourjuaneight@users.noreply.github.com

[github]
  user = fourjuaneight

[color]
  ui = true

[log]
  decorate = auto

[core]
  excludesfile = ~/.gitignore_global
  editor = hx
  pager = delta

[delta]
  features = side-by-side line-numbers decorations
  whitespace-error-style = 22 reverse
  plus-color = syntax "#50fa7b"
  minus-color = normal "#ff80bf"
  syntax-theme = Dracula

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none

[interactive]
  diffFilter = delta --color-only

[diff]
  colorMoved = zebra

[merge]
  conflictstyle = diff3

[absorb]
  maxStack = 150

[mergetool]
  keepBackup = true
  prompt = false

[commit]
  gpgsign = true

[tag]
  gpgSign = true

[fetch]
  prune = true

[pull]
  rebase = true

[push]
  default = current

[branch]
  sort = -committerdate

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[interactive]
  diffFilter = delta --color-only

[sequence]
  editor = interactive-rebase-tool
